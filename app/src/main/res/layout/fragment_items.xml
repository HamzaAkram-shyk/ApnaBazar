<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@drawable/bck_main"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:gravity="center"
        android:background="#7EFFFCFC"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.13"
        android:textSize="13sp"
        android:textStyle="bold"
        android:fontFamily="monospace"
        android:id="@+id/txttagline"
        android:textColor="@android:color/white"
        android:text="WE Save Your Time And Money Too"

        />

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/horizontal_recyclerView"
        app:layout_constraintStart_toStartOf="@id/txttagline"
        app:layout_constraintEnd_toEndOf="@id/txttagline"
        app:layout_constraintTop_toBottomOf="@id/txttagline"
        android:padding="1dp"
        app:layout_constraintBottom_toTopOf="@id/category_text"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:text="Categories"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/horizontal_recyclerView"
        app:layout_constraintBottom_toTopOf="@id/recycle"
        android:layout_marginTop="2dp"
        android:paddingLeft="8dp"
        android:id="@+id/category_text"
        android:textSize="15sp"/>
    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/category_text"
        android:id="@+id/recycle"
        android:layout_marginTop="2dp"
        android:elevation="10dp"
        android:padding="3dp"
        android:layout_marginBottom="58dp"
        />


    <pl.droidsonroids.gif.GifImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/loadingImageview"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/bear_animation"
        app:layout_constraintVertical_bias="0.5"
        />



</androidx.constraintlayout.widget.ConstraintLayout>